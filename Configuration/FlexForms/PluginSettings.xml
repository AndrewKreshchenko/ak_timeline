<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Timeline Configuration</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <!-- Timeline views -->
          <settings.timeline.style>
            <TCEforms>
              <label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:settings.timeline.max</label>
              <config>
                <type>select</type>
                <renderType>selectSingle</renderType>
                <itemsProcFunc>AK\TimelineVis\Hooks\Backend\Form\FormDataProvider\TimelineItemsProcFunc->getTimelineStyles</itemsProcFunc>
                <size>1</size>
                <minitems>0</minitems>
                <maxitems>1</maxitems>
                <eval>required</eval>
              </config>
            </TCEforms>
          </settings.timeline.style>

          <switchableControllerActions>
						<TCEforms>
							<label>Plugin mode</label>
							<exclude>1</exclude>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Timelines list</numIndex>
										<numIndex index="1">Timeline->list</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Show the timeline</numIndex>
										<numIndex index="1">Timeline->show</numIndex>
									</numIndex>
								</items>
								<maxitems>1</maxitems>
								<size>1</size>
							</config>
						</TCEforms>
					</switchableControllerActions>

          <!-- Pagination settings -->
          <settings.enablePagination>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:tx_timelinevis_domain_model_timeline.enablepagination</label>
							<config>
								<type>check</type>
							</config>
              <onChange>reload</onChange>
						</TCEforms>
					</settings.enablePagination>
          <settings.itemsPerPage>
            <TCEforms>
              <exclude>1</exclude>
              <label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:tx_timelinevis_domain_model_timeline.itemsperpage</label>
              <config>
                <type>input</type>
                <size>5</size>
                <min>1</min>
                <max>49</max>
                <eval>num</eval>
                <default>1</default>
              </config>
              <displayCond>FIELD:sDEF.settings.enablePagination:=:1</displayCond>
            </TCEforms>
          </settings.itemsPerPage>
          <settings.pagesCount>
            <TCEforms>
              <exclude>1</exclude>
              <label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:tx_timelinevis_domain_model_timeline.pagescount</label>
              <config>
                <type>input</type>
                <size>5</size>
                <min>1</min>
                <max>99</max>
                <eval>num</eval>
                <default>99</default>
              </config>
              <displayCond>FIELD:sDEF.settings.enablePagination:=:1</displayCond>
            </TCEforms>
          </settings.pagesCount>
        </el>
      </ROOT>
    </sDEF>

    <additional>
			<ROOT>
				<TCEforms>
					<sheetTitle>Additional</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
          <!-- Load points data asynchronously -->
					<settings.loadAsync>
						<TCEforms>
							<label>Load points asynchronously</label>
              <description>If enabled, points will load during page scroll. So it'll work only for vertical Timeline. Useful for loading large amount of data.</description>
              <exclude>1</exclude>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.loadAsync>

					<!-- Enable Asynchronous loading of child timelines data -->
					<settings.hideDerivedPoints>
						<TCEforms>
							<label>Hide points of derived timelines</label>
              <description>If enabled, then points of derived timelines will be collapsed. Each will load asynchronously when certain button is triggered.</description>
              <exclude>1</exclude>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.hideDerivedPoints>
        </el>
      </ROOT>
    </additional>
  </sheets>
</T3DataStructure>
