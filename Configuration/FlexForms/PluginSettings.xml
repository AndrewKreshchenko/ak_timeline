<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Timeline Configuration</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <settings.timeline.max>
            <TCEforms>
              <label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:settings.timeline.max</label>
              <config>
                <type>input</type>
                <size>2</size>
                <eval>int</eval>
                <default>10</default>
              </config>
            </TCEforms>
          </settings.timeline.max>

          <settings.timeline.style>
            <TCEforms>
              <label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:settings.timeline.max</label>
              <config>
                <type>select</type>
                <renderType>selectSingle</renderType>
                <itemsProcFunc>AK\TimelineVis\Hooks\Backend\Form\FormDataProvider\TimelineItemsProcFunc->getTimelineStyles</itemsProcFunc>
                <size>1</size>
                <minitems>0</minitems>
                <maxitems>1</maxitems>
                <eval>required</eval>
              </config>
            </TCEforms>
          </settings.timeline.style>

          <switchableControllerActions>
						<TCEforms>
							<label>Plugin mode</label>
							<exclude>1</exclude>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Timelines list</numIndex>
										<numIndex index="1">Timeline->list</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Show the timeline</numIndex>
										<numIndex index="1">Timeline->show</numIndex>
									</numIndex>
								</items>
								<maxitems>1</maxitems>
								<size>1</size>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<settings.enablePagination>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:tx_timelinevis_domain_model_timeline.enablepagination</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.enablePagination>

          <settings.itemsPerPage>
            <TCEforms>
              <exclude>1</exclude>
              <label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:tx_timelinevis_domain_model_timeline.itemsperpage</label>
              <config>
                <type>input</type>
                <size>5</size>
                <min>1</min>
                <max>49</max>
                <eval>num</eval>
                <default>1</default>
              </config>
              <displayCond>FIELD:sDEF.settings.enablePagination:=:1</displayCond>
            </TCEforms>
          </settings.itemsPerPage>

          <settings.pagesCount>
            <TCEforms>
              <exclude>1</exclude>
              <label>LLL:EXT:ak_timeline/Resources/Private/Language/locallang_db.xlf:tx_timelinevis_domain_model_timeline.pagescount</label>
              <config>
                <type>input</type>
                <size>5</size>
                <min>1</min>
                <max>99</max>
                <eval>num</eval>
                <default>99</default>
              </config>
              <displayCond>FIELD:sDEF.settings.enablePagination:=:1</displayCond>
            </TCEforms>
          </settings.pagesCount>

